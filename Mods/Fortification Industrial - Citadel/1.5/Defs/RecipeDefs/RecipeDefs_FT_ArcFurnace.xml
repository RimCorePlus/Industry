<Defs>
    <RecipeDef ParentName="RCP_RefineRecipeBase">
        <defName>RCP_RefineSteelFTC</defName>
        <label>refine steel x4</label>
        <description>Make four batches of steel with raw iron ore.</description>
        <jobString>Refining steel from iron ore.</jobString>
        <workAmount>2000</workAmount>
        <recipeUsers Inherit="False">
            <li>FT_ArcFurnace</li>
        </recipeUsers>
        <ingredients>
            <li>
                <filter>
                    <thingDefs>
                        <li>RCP_Coal</li>
                    </thingDefs>
                </filter>
                <count>15</count>
            </li>
            <li>
                <filter>
                    <thingDefs>
                        <li>RCP_Iron</li>
                    </thingDefs>
                </filter>
                <count>60</count>
            </li>
        </ingredients>
        <fixedIngredientFilter>
            <thingDefs>
                <li>RCP_Coal</li>
                <li>RCP_Iron</li>
            </thingDefs>
        </fixedIngredientFilter>
        <products>
            <Steel>60</Steel>
        </products>
    </RecipeDef>
