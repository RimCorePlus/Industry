<Patch>
	<!--iron stat rebalance-->
	<Operation Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="CorePlus_Iron"]/statBases/StuffPower_Armor_Sharp/text()</xpath>
				<value>0.89</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="CorePlus_Iron"]/statBases/StuffPower_Armor_Blunt/text()</xpath>
				<value>1.25</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="CorePlus_Iron"]/statBases/StuffPower_Armor_Heat/text()</xpath>
				<value>0</value>
			</li>
		</operations>
	</Operation>
	<!--add CE statbases-->
	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[defName="CorePlus_Iron"]/statBases[not(Bulk)]</xpath>
		<value>
			<Bulk>0.03</Bulk>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[defName="CorePlus_Iron"]/statBases[not(MeleeCounterParryBonus)]</xpath>
		<value>
			<MeleeCounterParryBonus>1.3</MeleeCounterParryBonus>
		</value>
	</Operation>
	<!--add CE stuffprops-->
	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[defName="CorePlus_Iron"]/stuffProps/categories</xpath>
		<value>
			<li>Metallic_Weapon</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[defName="CorePlus_Iron"]/stuffProps/statFactors[not(Mass)]</xpath>
		<value>
			<Mass>1.25</Mass>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>//ThingDef[defName="CorePlus_Iron"]/stuffProps/statFactors[not(MeleePenetrationFactor)]</xpath>
		<value>
			<MeleePenetrationFactor>0.95</MeleePenetrationFactor>
		</value>
	</Operation>
	<!--wood (balanced at approximately 80% values of lumber)-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]/tools</xpath>
		<value>
			<tools>
				<li Class="CombatExtended.ToolCE">
					<capacities>
						<li>Blunt</li>
					</capacities>
					<power>1.6</power>
					<cooldownTime>0.99</cooldownTime>
					<armorPenetrationBlunt>0.244</armorPenetrationBlunt>
				</li>
			</tools>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]</xpath>
		<value>
			<equippedStatOffsets>
				<MeleeCritChance>0.2</MeleeCritChance>
				<MeleeParryChance>1</MeleeParryChance>
				<MeleeDodgeChance>0.1</MeleeDodgeChance>
			</equippedStatOffsets>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]/statBases</xpath>
		<value>
			<Bulk>0.07</Bulk>
			<MeleeCounterParryBonus>1</MeleeCounterParryBonus>
		</value>
	</Operation>
	<Operation Class="PatchOperationAddModExtension">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]</xpath>
		<value>
			<li Class="CombatExtended.StuffToughnessMultiplierExtensionCE">
				<toughnessMultiplier>4</toughnessMultiplier>
			</li>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]/statBases</xpath>
		<value>
			<StuffPower_Armor_Sharp>0.08</StuffPower_Armor_Sharp>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]/statBases</xpath>
		<value>
			<StuffPower_Armor_Blunt>0.16</StuffPower_Armor_Blunt>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]/statBases</xpath>
		<value>
			<StuffPower_Armor_Heat>0.02</StuffPower_Armor_Heat>
		</value>
	</Operation>
	<Operation Class="PatchOperationAdd">
		<xpath>Defs/ThingDef[defName="CorePlus_WoodLog"]/stuffProps/statFactors</xpath>
		<value>
			<Mass>0.6</Mass>
			<MeleePenetrationFactor>0.4</MeleePenetrationFactor>
		</value>
	</Operation>
	<!--hardened leather-->
	<Operation Class="PatchOperationReplace">
		<xpath>Defs/ThingDef[defName="CorePlus_Leather_Hardened"]/statBases/StuffPower_Armor_Sharp</xpath>
		<value>
			<StuffPower_Armor_Sharp>0.07</StuffPower_Armor_Sharp>
		</value>
	</Operation>
	<!--toggable patches-->
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>[Combat Extended] Improvised gas mask uses coal instead of wood</label>
		<operations>
			<li Class="PatchOperationSetName">
				<xpath>//ThingDef[defName="CE_Apparel_ImprovGasMask"]/costList/WoodLog</xpath>
				<name>CorePlus_Coal</name>
			</li>
		</operations>
	</Operation>
</Patch>