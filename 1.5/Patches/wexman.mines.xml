<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Mines</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Normal</success>
			<operations>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName="Excavate_Steel"]/label</xpath>
					<value>
						<label>mining iron</label>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName="Excavate_Steel"]/description</xpath>
					<value>
						<description>mining iron.</description>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName="Excavate_Steel"]/jobString</xpath>
					<value>
						<jobString>Mining iron.</jobString>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>*/RecipeDef[defName="Excavate_Steel"]/products/Steel</xpath>
					<value>
						<CorePlus_Iron>20</CorePlus_Iron>
					</value>
				</li>
			</operations>
		</match>
	</Operation>
</Patch>		