<Patch>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>metal is not flammable</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef/stuffProps[categories/li[text()="Metallic"]]/statFactors/Flammability/text()</xpath>
				<!--should affect all metals added by all DLC and mods loaded before this mod-->
				<value>0</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>gold and silver are beautiful</label>
		<operations>
			<li Class="PatchOperationAdd">
				<xpath>//ThingDef[defName="Gold" or defName="Silver"]/statBases</xpath>
				<value>
					<Beauty>4</Beauty>
				</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>increase steel durability</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="Steel"]/stuffProps/statFactors/MaxHitPoints/text()</xpath>
				<value>2</value>
			</li>
			<li Class="PatchOperationConditional">
				<xpath>//ThingDef[defName="CorePlus_ElvenSteel"]</xpath>
				<match Class="PatchOperationReplace">
					<xpath>//ThingDef[defName="CorePlus_ElvenSteel"]/stuffProps/statFactors/MaxHitPoints/text()</xpath>
					<value>2</value>
				</match>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>increase uranium durability</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="Uranium"]/stuffProps/statFactors/MaxHitPoints/text()</xpath>
				<value>2.6</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>increase plasteel durability</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="Plasteel"]/stuffProps/statFactors/MaxHitPoints/text()</xpath>
				<value>3</value>
			</li>
		</operations>
	</Operation>
	<Operation Class="VFECore.PatchOperationToggableSequence">
		<enabled>true</enabled>
		<label>remove compacted plasteel</label>
		<operations>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="MineablePlasteel"]/building/mineableScatterCommonality/text()</xpath>
				<value>0</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="Plasteel"]/deepCommonality</xpath>
				<value>
					<deepCommonality />
				</value>
			</li>
			<li Class="PatchOperationReplace">
				<xpath>//ThingDef[defName="Plasteel"]/deepLumpSizeRange</xpath>
				<value>
					<deepLumpSizeRange />
				</value>
			</li>
			<li Class="PatchOperationRemove">
				<xpath>//GenStepDef/genStep/mineables/li[text()="MineablePlasteel"]</xpath>
			</li>
		</operations>
	</Operation>
</Patch>