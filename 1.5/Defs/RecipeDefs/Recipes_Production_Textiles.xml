<Defs>
	<!--parent-->
	<RecipeDef Abstract="True" Name="CorePlus_SpinFabricBase">
		<effectWorking>Tailor</effectWorking>
		<recipeUsers>
			<li>CorePlus_SpinningWheel</li>
			<li>CorePlus_ElectricSpinningWheel</li>
		</recipeUsers>
		<soundWorking>Recipe_Tailor</soundWorking>
		<workSkill>Crafting</workSkill>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
	</RecipeDef>
	<RecipeDef Abstract="True" Name="CorePlus_MakeTanningLiquorBase">
		<jobString>Making a batch of tanning liquor.</jobString>
		<effectWorking>Cook</effectWorking>
		<soundWorking>Recipe_CookMeal</soundWorking>
		<workAmount>900</workAmount>
		<workSkill>Cooking</workSkill>
		<workSpeedStat>CookSpeed</workSpeedStat>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<targetCountAdjustment>25</targetCountAdjustment>
		<products>
			<CorePlus_TanningLiquor>25</CorePlus_TanningLiquor>
		</products>
		<recipeUsers>
			<li>Campfire</li>
			<li>FueledStove</li>
			<li>ElectricStove</li>
		</recipeUsers>
	</RecipeDef>
	<!--cloth-->
	<RecipeDef ParentName="CorePlus_SpinFabricBase">
		<defName>CorePlus_SpinCloth</defName>
		<label>spin cloth</label>
		<description>Spin raw cotton fiber into workable cloth.</description>
		<jobString>Spinning cloth.</jobString>
		<displayPriority>0</displayPriority>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CorePlus_Cotton</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<Cloth>5</Cloth>
		</products>
		<workAmount>250</workAmount>
	</RecipeDef>
	<RecipeDef ParentName="CorePlus_SpinFabricBase">
		<defName>CorePlus_SpinClothBulk</defName>
		<label>spin cloth x4</label>
		<description>Spin raw cotton fiber into workable cloth.</description>
		<jobString>Spinning cloth.</jobString>
		<displayPriority>5</displayPriority>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CorePlus_Cotton</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<products>
			<Cloth>20</Cloth>
		</products>
		<workAmount>1000</workAmount>
	</RecipeDef>
	<!--devilstrand-->
	<RecipeDef ParentName="CorePlus_SpinFabricBase">
		<defName>CorePlus_SpinDevilstrand</defName>
		<label>spin devilstrand</label>
		<description>Spin raw devilstrand fiber into workable cloth.</description>
		<jobString>Spinning devilstrand.</jobString>
		<displayPriority>10</displayPriority>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CorePlus_Devilstrand</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<products>
			<DevilstrandCloth>5</DevilstrandCloth>
		</products>
		<researchPrerequisite>Devilstrand</researchPrerequisite>
		<workAmount>500</workAmount>
	</RecipeDef>
	<RecipeDef ParentName="CorePlus_SpinFabricBase">
		<defName>CorePlus_SpinDevilstrandBulk</defName>
		<label>spin devilstrand x4</label>
		<description>Spin raw devilstrand fiber into workable cloth.</description>
		<jobString>Spinning devilstrand.</jobString>
		<displayPriority>15</displayPriority>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>CorePlus_Devilstrand</li>
					</thingDefs>
				</filter>
				<count>40</count>
			</li>
		</ingredients>
		<products>
			<DevilstrandCloth>20</DevilstrandCloth>
		</products>
		<researchPrerequisite>Devilstrand</researchPrerequisite>
		<workAmount>2000</workAmount>
	</RecipeDef>
	<!--hardened patchleather-->
	<RecipeDef ParentName="CorePlus_MakeTanningLiquorBase">
		<defName>CorePlus_MakeTanningLiquorFromWood</defName>
		<label>make tanning liquor from wood</label>
		<description>Make a batch of tanning liquor using the bark and wood contents from logs.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>WoodLog</li>
						<li>CorePlus_WoodLog</li>
						<li MayRequire="sirmashedpotato.ashlands">Mashed_Ashlands_ParasolWoodLog</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>WoodLog</li>
				<li>CorePlus_WoodLog</li>
				<li MayRequire="sirmashedpotato.ashlands">Mashed_Ashlands_ParasolWoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
	<RecipeDef ParentName="CorePlus_MakeTanningLiquorBase">
		<defName>CorePlus_MakeTanningLiquorFromFood</defName>
		<label>make tanning liquor from food</label>
		<description>Make a batch of tanning liquor using any organic ingredients known to harbor tannins.</description>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RawHops</li>
						<li>RawAgave</li>
						<li>RawBerries</li>
						<li>RawCorn</li>
					</thingDefs>
				</filter>
				<count>25</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RawHops</li>
				<li>RawAgave</li>
				<li>RawBerries</li>
				<li>RawCorn</li>
			</thingDefs>
		</fixedIngredientFilter>
	</RecipeDef>
</Defs>