<Defs>
	<RecipeDef>
		<defName>RCP_MakeCharcoal</defName>
		<label>make charcoal</label>
		<description>Make a batch of charcoal from logs.</description>
		<jobString>Making charcoal from wood logs.</jobString>
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<workAmount>900</workAmount>
		<workSpeedStat>GeneralLaborSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<targetCountAdjustment>20</targetCountAdjustment>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li MayRequire="sirmashedpotato.ashlands">Mashed_Ashlands_ParasolWoodLog</li>
						<li>RCP_Firewood</li>
						<li>RCP_GreenLumber</li>
						<li>RCP_WoodLog</li>
						<li>WoodLog</li>
					</thingDefs>
				</filter>
				<count>20</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li MayRequire="sirmashedpotato.ashlands">Mashed_Ashlands_ParasolWoodLog</li>
				<li>RCP_Firewood</li>
				<li>RCP_GreenLumber</li>
				<li>RCP_WoodLog</li>
				<li>WoodLog</li>
			</thingDefs>
		</fixedIngredientFilter>
		<defaultIngredientFilter>
			<thingDefs>
				<li>RCP_WoodLog</li>
			</thingDefs>
			<disallowedThingDefs>
				<li MayRequire="sirmashedpotato.ashlands">Mashed_Ashlands_ParasolWoodLog</li>
				<li>RCP_Firewood</li>
				<li>RCP_GreenLumber</li>
				<li>WoodLog</li>
			</disallowedThingDefs>
		</defaultIngredientFilter>
		<products>
		<RCP_Coal>10</RCP_Coal>
		</products>
		<recipeUsers>
			<li MayRequire="VanillaExpanded.VFEProduction">VFE_FueledSmelter</li>
			<li>Campfire</li>
			<li>RCP_Bloomery</li>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>
	<RecipeDef Abstract="True" Name="RCP_RefineRecipeBase">
		<effectWorking>Smelt</effectWorking>
		<soundWorking>Recipe_Smelt</soundWorking>
		<workSpeedStat>SmeltingSpeed</workSpeedStat>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<targetCountAdjustment>15</targetCountAdjustment>
		<allowMixingIngredients>false</allowMixingIngredients>
		<recipeUsers>
			<li>RCP_Bloomery</li>
			<li>ElectricSmelter</li>
		</recipeUsers>
	</RecipeDef>
	<RecipeDef ParentName="RCP_RefineRecipeBase">
		<defName>RCP_RefineSteel</defName>
		<label>refine steel</label>
		<description>Make a batch of steel with raw iron ore.</description>
		<jobString>Refining steel from iron ore.</jobString>
		<workAmount>1000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RCP_Coal</li>
					</thingDefs>
				</filter>
				<count>5</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RCP_Iron</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RCP_Coal</li>
				<li>RCP_Iron</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Steel>15</Steel>
		</products>
	</RecipeDef>
	<RecipeDef ParentName="RCP_RefineRecipeBase">
		<defName>RCP_RefineSteelBulk</defName>
		<label>refine steel x4</label>
		<description>Make four batches of steel with raw iron ore.</description>
		<jobString>Refining steel from iron ore.</jobString>
		<workAmount>4000</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>RCP_Coal</li>
					</thingDefs>
				</filter>
				<count>15</count>
			</li>
			<li>
				<filter>
					<thingDefs>
						<li>RCP_Iron</li>
					</thingDefs>
				</filter>
				<count>60</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>RCP_Coal</li>
				<li>RCP_Iron</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Steel>60</Steel>
		</products>
	</RecipeDef>
</Defs>