<Defs>
	<!--manual spinning wheel-->
	<ThingDef ParentName="CorePlus_WorkTableBase">
		<defName>CorePlus_SpinningWheel</defName>
		<label>spinning wheel</label>
		<description>A crude wooden device for spinning fabric from raw fibers.</description>
		<graphicData>
			<texPath>Things/Building/Production/spinningWheel</texPath>
			<drawSize>(1.5,1.5)</drawSize>
			<drawOffsetNorth>(0,0,0.11)</drawOffsetNorth>
		</graphicData>
		<uiIconPath>Things/Building/Production/spinningWheel_north</uiIconPath>
		<costList>
			<WoodLog>50</WoodLog>
		</costList>
		<statBases>
			<Mass>4</Mass>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkTableWorkSpeedFactor>0.75</WorkTableWorkSpeedFactor>
		</statBases>
		<uiOrder>2398</uiOrder>
	</ThingDef>
	<!--electric spinning wheel-->
	<ThingDef ParentName="CorePlus_WorkTableBase">
		<defName>CorePlus_ElectricSpinningWheel</defName>
		<label>electric spinning wheel</label>
		<description>A small table mounted with a fully electric spinng wheel for spinning fabric from raw fibers.</description>
		<graphicData>
			<drawOffsetEast>(0.14,0,0)</drawOffsetEast>
			<drawOffsetWest>(0.14,0,0)</drawOffsetWest>
			<drawOffsetSouth>(0,0,0.14)</drawOffsetSouth>
			<drawOffsetNorth>(0,0,0.14)</drawOffsetNorth>
			<drawSize>(2,1.28)</drawSize>
			<texPath>Things/Building/Production/electricWheel</texPath>
		</graphicData>
		<uiIconPath>Things/Building/Production/electricWheel_north</uiIconPath>
		<altitudeLayer>Pawn</altitudeLayer>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<WorkTableWorkSpeedFactor>0.06</WorkTableWorkSpeedFactor>
				</statOffsets>
				<maxSimultaneous>3</maxSimultaneous>
			</li>
		</comps>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		<size>(2,1)</size>
		<statBases>
			<Mass>8</Mass>
			<MaxHitPoints>100</MaxHitPoints>
			<Flammability>0.4</Flammability>
		</statBases>
		<uiOrder>2399</uiOrder>
	</ThingDef>
	<!--tanning vat-->
	<ThingDef ParentName="CorePlus_IndustryBuildingBase">
		<defName>CorePlus_TanningVat</defName>
		<label>tanning vat</label>
		<description>Tanning liquors can be poured here, and patchleather can then be soaked in it for about a day to yield hardened patchleather.</description>
		<descriptionHyperlinks>
			<ThingDef>CorePlus_Leather_Hardened</ThingDef>
			<ThingDef>CorePlus_TanningLiquor</ThingDef>
		</descriptionHyperlinks>
		<thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
		<graphicData>
			<texPath>Things/Building/Production/tanning_vat</texPath>
			<drawSize>(1.33, 1.33)</drawSize>
			<damageData>
				<rect>(0.05,0.05,0.9,0.9)</rect>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
			<shadowData>
				<volume>(0.8, 0.8, 0.8)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<uiIconPath>Things/Building/Production/tanning_vat_north</uiIconPath>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<statBases>
			<Mass>5</Mass>
			<MaxHitPoints>90</MaxHitPoints>
		</statBases>
		<comps>
			<li Class="ItemProcessor.CompProperties_ItemProcessor">
				<isSemiAutomaticMachine>true</isSemiAutomaticMachine>
				<showFactoryProgressBar>true</showFactoryProgressBar>
				<numberOfInputs>2</numberOfInputs>
			</li>
		</comps>
	</ThingDef>
</Defs>