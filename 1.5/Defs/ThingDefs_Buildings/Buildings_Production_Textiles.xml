<Defs>
	<!--fabric-->
	<ThingDef ParentName="BenchBase">
		<defName>CorePlus_SpinningWheel</defName>
		<label>spinning wheel</label>
		<description>A crude wooden device for spinning fabric from raw fibers.</description>
		<thingClass>Building_WorkTable</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/Production/spinningWheel</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.5,1.5)</drawSize>
			<drawOffsetNorth>(0,0,0.11)</drawOffsetNorth>
		</graphicData>
		<uiIconPath>Things/Building/Production/spinningWheel_north</uiIconPath>
		<altitudeLayer>Building</altitudeLayer>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<uninstallWork>100</uninstallWork>
		</building>
		<castEdgeShadows>false</castEdgeShadows>
		<costList>
			<WoodLog>50</WoodLog>
		</costList>
		<designationCategory>Production</designationCategory>
		<fillPercent>0.3</fillPercent>
		<hasInteractionCell>true</hasInteractionCell>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<minifiedDef>MinifiedThing</minifiedDef>
		<passability>PassThroughOnly</passability>
		<pathCost>50</pathCost>
		<statBases>
			<Mass>4</Mass>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>1000</WorkToBuild>
			<Flammability>1.0</Flammability>
			<WorkTableWorkSpeedFactor>0.75</WorkTableWorkSpeedFactor>
		</statBases>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<uiOrder>2398</uiOrder>
		<useHitPoints>true</useHitPoints>
	</ThingDef>
	<ThingDef ParentName="BenchBase">
		<defName>CorePlus_ElectricSpinningWheel</defName>
		<label>electric spinning wheel</label>
		<description>A small table mounted with a fully electric spinng wheel for spinning fabric from raw fibers.</description>
		<thingClass>Building_WorkTable</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/Production/electricWheel</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(2,2)</drawSize>
		</graphicData>
		<uiIconPath>Things/Building/Production/electricWheel_north</uiIconPath>
		<altitudeLayer>Building</altitudeLayer>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
			<uninstallWork>100</uninstallWork>
		</building>
		<castEdgeShadows>false</castEdgeShadows>
		<comps>
			<li Class="CompProperties_Power">
				<compClass>CompPowerTrader</compClass>
				<shortCircuitInRain>true</shortCircuitInRain>
				<basePowerConsumption>50</basePowerConsumption>
			</li>
			<li Class="CompProperties_Flickable"/>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<WorkTableWorkSpeedFactor>0.06</WorkTableWorkSpeedFactor>
				</statOffsets>
				<maxSimultaneous>3</maxSimultaneous>
			</li>
		</comps>
		<costList>
			<Steel>50</Steel>
			<ComponentIndustrial>1</ComponentIndustrial>
		</costList>
		<designationCategory>Production</designationCategory>
		<fillPercent>0.3</fillPercent>
		<hasInteractionCell>true</hasInteractionCell>
		<inspectorTabs>
			<li>ITab_Bills</li>
		</inspectorTabs>
		<interactionCellOffset>(0,0,-1)</interactionCellOffset>
		<minifiedDef>MinifiedThing</minifiedDef>
		<passability>PassThroughOnly</passability>
		<pathCost>70</pathCost>
		<researchPrerequisites>
			<li>Electricity</li>
		</researchPrerequisites>
		<size>(2,1)</size>
		<statBases>
			<Mass>4</Mass>
			<MaxHitPoints>75</MaxHitPoints>
			<WorkToBuild>1000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<staticSunShadowHeight>0</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<uiOrder>2399</uiOrder>
		<useHitPoints>true</useHitPoints>
	</ThingDef>
	<!--hardened patchleather-->
	<ThingDef ParentName="BuildingBase">
		<defName>CorePlus_TanningVat</defName>
		<label>tanning vat</label>
		<description>Tanning liquors can be poured here, and raw hides and pelts can then be soaked in it for a couple days to yield tanned leather.</description>
		<thingClass>ItemProcessor.Building_ItemProcessor</thingClass>
		<drawerType>MapMeshAndRealTime</drawerType>
		<graphicData>
			<texPath>Things/Building/Production/tanning_vat</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<shaderType>CutoutComplex</shaderType>
			<drawSize>(1.33, 1.33)</drawSize>
			<damageData>
				<rect>(0.05,0.05,0.9,0.9)</rect>
				<cornerTL>Damage/Corner</cornerTL>
				<cornerTR>Damage/Corner</cornerTR>
				<cornerBL>Damage/Corner</cornerBL>
				<cornerBR>Damage/Corner</cornerBR>
			</damageData>
			<shadowData>
				<volume>(0.8, 0.8, 0.8)</volume>
				<offset>(0,0,-0.25)</offset>
			</shadowData>
		</graphicData>
		<uiIconPath>Things/Building/Production/tanning_vat_north</uiIconPath>
		<stuffCategories>
			<li>Metallic</li>
			<li>Woody</li>
		</stuffCategories>
		<costStuffCount>20</costStuffCount>
		<altitudeLayer>Building</altitudeLayer>
		<canOverlapZones>false</canOverlapZones>
		<fillPercent>0.6</fillPercent>
		<useHitPoints>True</useHitPoints>
		<castEdgeShadows>true</castEdgeShadows>
		<pathCost>42</pathCost>
		<statBases>
			<Mass>5</Mass>
			<MaxHitPoints>90</MaxHitPoints>
			<WorkToBuild>1000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<designationCategory>Production</designationCategory>
		<passability>PassThroughOnly</passability>
		<building>
			<spawnedConceptLearnOpportunity>BillsTab</spawnedConceptLearnOpportunity>
		</building>
		<comps>
			<li Class="ItemProcessor.CompProperties_ItemProcessor">
				<isSemiAutomaticMachine>true</isSemiAutomaticMachine>
				<showFactoryProgressBar>true</showFactoryProgressBar>
				<numberOfInputs>2</numberOfInputs>
			</li>
		</comps>
		<tickerType>Rare</tickerType>
		<minifiedDef>MinifiedThing</minifiedDef>
		<thingCategories>
			<li>BuildingsProduction</li>
		</thingCategories>
	</ThingDef>
</Defs>